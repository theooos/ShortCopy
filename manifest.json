{
	"name": "Short Copy",
	"version": "1.0",
	"description": "Creates a keyboard shortcut (Alt + Shift + P) to copy current URL and shorten it.",
	
	"permissions": [
		"http://*.google.com/*",
		"clipboardWrite",
		"activeTab"],
	"content_security_policy": "script-src 'self' https://apis.google.com; object-src 'self'",
	
	"background": {
		"persistent": false,
		"scripts": ["background.js"]
	},

	"icons": {
		"16": "16.png",
		"32": "32.png",
		"48": "48.png",
		"128": "128.png"
	},

	"commands": {
		"toggle-pin": {
			"suggested_key": { "default": "Alt+Shift+P" },
			"description": "Toggle tab pin"
		}
	},
	"manifest_version": 2
}